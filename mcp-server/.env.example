# ZAP Connection - API is on port 8080
# ZAP has api.disablekey=true, so leave this empty
ZAP_API_KEY=

# MCP Server Security
MCP_SECURITY_ENABLED=true
MCP_SECURITY_MODE=api-key
MCP_API_KEY=<generate with: openssl rand -hex 32>

# Scan Configuration
ZAP_MAX_ACTIVE_SCAN_DURATION=30
ZAP_MAX_SPIDER_SCAN_DURATION=10
ZAP_ALLOW_PRIVATE_NETWORKS=true
